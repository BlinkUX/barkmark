.bk-hide
  display none !important

.bk-container
  position relative

.bk-wysiwyg-placeholder
  position absolute
  pointer-events none
  display none
  top 10px
  left 10px
  right 10px
  bottom 10px
  color #999

.bk-wysiwyg:empty + .bk-wysiwyg-placeholder
  display block

.bk-prompt
  position fixed
  top 20%
  left 2%
  right 2%
  background-color #dedede
  padding 10px
  margin 0 auto
  max-width 450px

.bk-prompt-body
  text-align left

.bk-prompt-buttons
  text-align center
  margin-top 20px

.bk-prompt-cancel
  margin-right 10px
  cursor pointer

.bk-prompt-upload
  vertical-align middle
  position relative
  overflow hidden // reason: see `bk-prompt-fileupload` styles below

.bk-prompt-browse
  font-weight bold

.bk-prompt-dragdrop
  text-align center
  font-style italic
  margin-left auto
  margin-right auto
  max-width 300px

.bk-prompt-fileupload
  position absolute
  top 0
  left -200% // reason: the button doesn't read the `cursor: pointer` style otherwise
  right 0
  bottom 0
  opacity 0
  cursor pointer

.bk-prompt-upload-dragging
  position absolute
  text-align center
  padding 10px
  top 0
  left 0
  right 0
  bottom 0
  background #fff

.bk-prompt-error
  display none
  padding 10px
  background-color #fc9a9a

.bk-prompt-error-show
  display block

.bk-prompt-drop,
.bk-prompt-drop-icon,
.bk-prompt-progress
  display none

.bk-prompt-upload-dragging
  .bk-prompt-drop,
  .bk-prompt-drop-icon
    display block

  .bk-prompt-dragdrop
    display none

.bk-prompt-uploading
  pointer-events none

  .bk-prompt-progress
    display block

  .bk-prompt-drop,
  .bk-prompt-dragdrop
    display none

.bk-prompt-progress
  cursor not-allowed
